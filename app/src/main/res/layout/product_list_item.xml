<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gorselImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp">

    </ImageView>

    <TextView
        android:id="@+id/barkodTextViewR"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="barkod"
        android:gravity="center">

    </TextView>

    <TextView
        android:id="@+id/komisyonTextViewR"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="komisyon"
        android:gravity="center">

    </TextView>

    <TextView
        android:id="@+id/satisTextViewR"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="satisFiyati"
        android:gravity="center">

    </TextView>

    <Button
        android:id="@+id/silButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:backgroundTint="#ABCDEF"
        android:text="SÄ°L"
        android:textSize="6dp">

    </Button>

</LinearLayout>